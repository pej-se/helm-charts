root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 160

[{*.yaml, *.yml}]
indent_size = 2

[*.java]
ij_java_use_single_class_imports = true
ij_java_names_count_to_use_import_on_demand = 1337

[{*.kt,*.kts}]
ij_kotlin_name_count_to_use_star_import = 1337
ij_kotlin_name_count_to_use_star_import_for_members = 1337
